{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "dotnet: build"
		},
		{
			"group": {
				"kind": "build"
			},
			"command": "dotnet",
			"args": ["build", "-p:TargetFrameworks=net8.0"],
			"problemMatcher": [],
			"label": "dotnet: build (net8.0 only)"
		},
		{
			"group": {
				"kind": "build"
			},
			"command": "dotnet",
			"args": ["pack", "-o", "packages"],
			"problemMatcher": [],
			"label": "dotnet: pack"
		},
		{
			"group": {
				"kind": "none"
			},
			"command": "dotnet",
			"args": ["clean"],
			"problemMatcher": [],
			"label": "dotnet: clean"
		},
		{
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"command": "dotnet",
			"args": ["test"],
			"problemMatcher": [],
			"label": "dotnet: test"
		},
		{
			"group": {
				"kind": "test"
			},
			"type": "shell",
			"command": "npm",
			"args": ["test"],
			"problemMatcher": [],
			"label": "npm: test (Javascript)",
			"options": {
				"cwd": "${workspaceFolder}/CSF.Screenplay.JsonToHtmlReport.Template/src"
			}
		},
		{
			"group": {
				"kind": "build"
			},
			"command": "dotnet",
			"args": ["build", "-c", "Docs"],
			"problemMatcher": [],
			"label": "Build docs website",
			"options": {"cwd": "${workspaceFolder}"}
		},
		{
			"group": {
				"kind": "build"
			},
			"command": "docfx",
			"args": ["CSF.Screenplay.Docs/docfx.json", "--serve"],
			"problemMatcher": [],
			"label": "Serve docs website"
		},
		{
			"group": {
				"kind": "build"
			},
			"type": "shell",
			"command": "npm",
			"args": ["i"],
			"problemMatcher": [],
			"label": "npm: install (Javascript)",
			"options": {
				"cwd": "${workspaceFolder}/CSF.Screenplay.JsonToHtmlReport.Template/src"
			}
		}
	]
}