{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [ "**/*.csproj" ],
          "exclude": [
            "docs/**",
            "**/bin/**",
            "**/obj/**",
            "Tests/**",
            "Old/**",
            "CSF.Screenplay.JsonToHtmlReport.Template/**"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "ProduceReferenceAssembly": "true"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.{md,yml}" ],
        "exclude": [ "README.md" ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          ".nojekyll"
        ]
      }
    ],
    "output": "../docs",
    "template": [
      "default",
      "modern",
      "screenplay-template"
    ],
    "globalMetadata": {
      "_appName": "CSF.Screenplay",
      "_appTitle": "Screenplay",
      "_enableSearch": true,
      "pdf": false
    }
  }
}