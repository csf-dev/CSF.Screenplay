{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "docs/**",
            "**/bin/**",
            "**/obj/**",
            "*.Tests/**"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": []
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          ".nojekyll"
        ]
      }
    ],
    "output": "../docs",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "CSF.Screenplay",
      "_appTitle": "CSF.Screenplay",
      "_enableSearch": true,
      "pdf": false
    }
  }
}