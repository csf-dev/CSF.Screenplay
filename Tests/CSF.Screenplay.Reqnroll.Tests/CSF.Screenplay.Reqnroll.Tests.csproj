    <PackageReference Include="NunitXml.TestLogger" Version="4.0.254" />
    <PackageReference Include="coverlet.collector" Version="6.0.2" />
    <PackageReference Include="Reqnroll.NUnit" Condition="'$(ReqnrollVersion)' == ''" Version="2.3.0" />
    <PackageReference Include="Reqnroll.NUnit" Condition="'$(ReqnrollVersion)' != ''" Version="$(ReqnrollVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\CSF.Screenplay.Abstractions\CSF.Screenplay.Abstractions.csproj" />
    <ProjectReference Include="..\..\CSF.Screenplay\CSF.Screenplay.csproj" />
    <ProjectReference Include="..\..\CSF.Screenplay.Reqnroll\CSF.Screenplay.Reqnroll.csproj" />
    <ProjectReference Include="..\..\ReqnrollPlugins.ReqnrollDi\ReqnrollPlugins.ReqnrollDi.csproj" />
  </ItemGroup>

</Project>
